<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Twitter Clone</title>
  <link rel="stylesheet" href="/css/home.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

  <!-- Header -->
  <header>
    <nav class="navbar">
      <div class="logo">üê¶ Twitter</div>
      <div class="menu">
        <a href="/home">Home</a>
        <a href="#">Notifications</a>
        <a href="/message">Messages</a>
        <a href="/profile">Profile</a>
        <a href="#">More</a>
      </div>
    </nav>
  </header>

  <!-- Main Container -->
  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="user-profile">
        <img src="/uploads/<%= uimage %>" alt="Profile" class="profile-pic" height="60" width="60" />
        <h3>Welcome, <%= uname %>!</h3>
        <form action="/Tweet" method="post" class="tweet-form">
          <textarea name="T1" placeholder="What's happening?" required></textarea>
          <button type="submit">Tweet</button>
        </form>
      </div>
    </aside>

    <!-- Feed -->
    <main class="feed">
      <% data.forEach((entry) => { %>
        <div class="tweet">
          <div class="tweet-header">
            <strong><%= entry.Name ? entry.Name : "Anonymous" %></strong>
            <span class="tweet-date"><%= entry.TDate %></span>
          </div>
          <p class="tweet-content"><%= entry.Msg %></p>
        </div>
      <% }) %>
    </main>
  </div>

</body>
</html>
