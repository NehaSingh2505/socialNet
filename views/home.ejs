<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Twitter Clone</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>

  <!-- Header Section -->
  <header>
    <nav class="navbar">
      <div class="logo">Twitter</div>
      <div class="menu">
        <a href="/home">Home</a>
        <a href="#">Notifications</a>
        <a href="#">Messages</a>
        <a href="profile">Profile</a>
        <a href="#">More</a>
      </div>
    </nav>
  </header>

  <!-- Main Content Section -->
  <div class="container">
    <div class="sidebar">
      <div class="user-profile">
        <% 
        var a="../frontend/uploads/"+ uimage; 
        %>
        <img src=<%= uimage %> alt="Profile" class="profile-pic" height="30" width="30">
        <h3>Welcome <%= uname %></h3>
    
        <button>Tweet</button>
      </div>
    </div>
<form action="Tweet" method="post">
    <div class="feed">
      <div class="tweet-box">
        <textarea placeholder="What's happening?" class="tweet-box" name="T1"></textarea>
        <button type="submit">Tweet</button>
      </div>
    </div>
</form>
   
          <% data.forEach((entry)=>
          {
            %>
            <div class="tweet">           
          <div class="tweet-info">
            <span class="user-name"><%= entry.Name ?entry.Name:"Anonymous" %></span>
            <span class="user-handle"><%=entry.Msg %></span>
            <span class="tweet-time"><%entry.TDate %></span>
          </div>
        </div>
        <p class="tweet-content">
          
          </p>
      </div>
    </div>
  <%});%>
  </div>
</div>

</body>
</html>

 