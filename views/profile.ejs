<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - Twitter Clone</title>
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>

  <header>
    <nav class="navbar">
      <div class="logo">Twitter</div>
      <div class="menu">
        <a href="home">Home</a>
        <a href="#">Notifications</a>
        <a href="#">Messages</a>
        <a href="profile">Profile</a>
        <a href="#">More</a>
      </div>
    </nav>
  </header>

  <div class="profile-container">
    <div class="banner"></div>
    <div class="profile-info">
      <img src="<%= uimage %>" alt="Profile" class="profile-pic">
      <h2><%=uname %></h2>
      <p><%=uemail %></p>
       <a href="/editProfile"  class="edit-profile"> Edit Profile</a>
    </div>
  </div>
  <div class="feed">
    <% data.forEach((entry)=>
    {
      if(entry.name!=uname)
      {
      %>
      <div class="tweet">
        <div class="tweet-header"  style="color:darkblue;">
          <div class="tweet-info"> <%= entry.name;%> 
            <button class="unfollow-btn" onclick="handleunfollow()">Unfollow</button>
            <!-- <button class="follow-btn" type="submit">follow</button> -->
          </div>
        </div>
      </div>
    <%}});
    %>
  </div>

  <script>
    const unfollowbtn = document.getElementsByClassName('unfollow-btn');
    
    const handleunfollow =(entry)=>{
      console.log(entry);
      
      console.log('unfollow button clicked');
    }
    handleunfollow()

  </script>

</body>
</html>
